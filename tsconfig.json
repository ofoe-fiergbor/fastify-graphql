{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["ESNext", "DOM"],
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "removeComments": false,
    "downlevelIteration": true,
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noImplicitThis": false,
    "alwaysStrict": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "baseUrl": "src",
    "skipLibCheck": true,
    "paths": {
      "@configs": ["configs"],
      "@docs": ["docs"],
      "@libs/*": ["libs/*"],
      "@hooks/*": ["hooks/*"],
      "@plugins/*": ["plugins/*"],
      "@schema/*": ["schema/*"],
      "@queries/*": ["queries/*"],
      "@mutations/*": ["mutations/*"],
      "@rules/*": ["rules/*"]
    }
  },
  "exclude": ["node_modules"]
}
